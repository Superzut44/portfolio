{% extends 'base.html.twig' %}

{% block title %}Screen index{% endblock %}

{% block body %}
    <div class="marginTop"></div>
    <h1>Screen index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for screen in screens %}
            <tr>
                <td>{{ screen.id }}</td>
                <td>{{ screen.name }}</td>
                <td>{{ screen.image }}</td>
                <td>
                    <a href="{{ path('app_screen_show', {'id': screen.id}) }}">show</a>
                    <a href="{{ path('app_screen_edit', {'id': screen.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_screen_new') }}">Create new</a>
{% endblock %}
